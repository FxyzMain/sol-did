{
    "name": "@identity.com/sol-did-client",
    "version": "3.0.0-beta8",
    "description": "A powerful DID-method on Solana",
    "license": "MIT",
    "main": "dist/src/index.js",
    "typings": "dist/src/index.d.ts",
    "author": "Martin Riedel <martin@identity.org>",
    "repository": "https://github.com/identity-com/sol-did",
    "homepage": "https://github.com/identity-com/sol-did",
    "files": [
        "/bin",
        "/dist",
        "/npm-shrinkwrap.json",
        "/oclif.manifest.json"
    ],
    "keywords": [
        "oclif",
        "did",
        "solana",
        "identity",
        "did-method",
        "did-client"
    ],
    "engines": {
        "node": ">=16"
    },
    "bin": {
        "sol": "./bin/run"
    },
    "oclif": {
        "bin": "sol",
        "dirname": "sol",
        "default": "resolve",
        "commands": "./dist/src/commands",
        "repositoryPrefix": "https://github.com/identity-com/sol-did/tree/program_v2/src/commands/",
        "plugins": [
            "@oclif/plugin-help"
        ],
        "topicSeparator": " ",
        "topics": {
            "hello": {
                "description": "Say hello to the world and others"
            }
        }
    },
    "scripts": {
        "lint:fix": "prettier */*.js \"*/**/*{.js,.ts}\" -w",
        "lint": "prettier */*.js \"*/**/*{.js,.ts}\" --check",
        "test": "anchor test",
        "clean": "shx rm -rf ./dist",
        "compile": "tsc -p tsconfig.json",
        "build": "yarn clean && anchor build && yarn compile",
        "prepare": "yarn build",
        "prepack": "yarn build && oclif manifest && oclif readme",
        "postpack": "shx rm -f oclif.manifest.json",
        "start-validator": "solana-test-validator --bpf-program didso1Dpqpm4CsiCjzP766BGY89CAdD6ZBL68cRhFPc ./target/deploy/sol_did.so --reset",
        "start-validator-legacy": "solana-test-validator --bpf-program didso1Dpqpm4CsiCjzP766BGY89CAdD6ZBL68cRhFPc ./target/deploy/sol_did.so --bpf-program idDa4XeCjVwKcprVAo812coUQbovSZ4kDGJf2sPaBnM ../program/target/deploy/sol_did_legacy.so --reset",
        "create-fixtures": "anchor run createTestFixtureAccount"
    },
    "dependencies": {
        "@identity.com/sol-did-client-legacy": "^2.0.3",
        "@oclif/core": "^1.12.1",
        "@oclif/plugin-help": "^5.1.12",
        "@project-serum/anchor": "0.25.0",
        "@solana/web3.js": "^1.48.0",
        "bs58": "^5.0.0",
        "did-resolver": "^3.2.2",
        "ethers": "^5.6.9"
    },
    "devDependencies": {
        "@oclif/test": "^2.1.0",
        "@project-serum/anchor-cli": "https://github.com/kklas/anchor-nightly/releases/download/anchor-cli-latest/anchor-cli-0.25.0-7eb8ca8.tgz",
        "@types/bn.js": "^5.1.0",
        "@types/chai": "^4.3.0",
        "@types/chai-as-promised": "^7.1.5",
        "@types/mocha": "^9.0.0",
        "borsh": "^0.7.0",
        "chai": "^4.3.4",
        "chai-as-promised": "^7.1.1",
        "husky": "^8.0.1",
        "mocha": "^9.0.3",
        "oclif": "^3.1.2",
        "prettier": "^2.6.2",
        "shx": "^0.3.4",
        "ts-mocha": "^10.0.0",
        "typescript": "^4.3.5"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn lint"
        }
    },
    "prettier": {
        "printWidth": 80,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5"
    }
}
